extends ./../common/layout

block content
  h1 should be display more data
  p #{user.email} this data comes from  the server

  button(type='button' class='exit btn btn-primary' ) Exit
  script.
    $(() => {
      $('.exit').on('click', (e) => {
        e.preventDefault()
        e.stopPropagation()
        $.ajax({
          url: 'http://localhost:8000/web/exit',
          type: 'GET',
          dataType: 'json',
          success (res) {
            if (res.status === 200) {
              window.location.href = '/login.html'
            } else {
              console.error(res.message)
            }
          },
          error (e) {
            console.error(e)
          }
        })
      })
    })

